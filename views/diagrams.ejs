<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Productivity Tracker - Database Diagrams</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
  <script src="https://cdn.jsdelivr.net/npm/mermaid/dist/mermaid.min.js"></script>
  <style>
    :root {
      --primary-gradient: linear-gradient(135deg, #6B73FF 0%, #000DFF 100%);
      --secondary-gradient: linear-gradient(135deg, #FF6B6B 0%, #FF000D 100%);
      --success-gradient: linear-gradient(135deg, #28a745 0%, #20c997 100%);
      --warning-gradient: linear-gradient(135deg, #ffc107 0%, #fd7e14 100%);
      --danger-gradient: linear-gradient(135deg, #dc3545 0%, #c71f2d 100%);
    }

    [data-theme="dark"] {
      --bg-color: #0f172a;
      --text-color: #e2e8f0;
      --card-bg: #1e293b;
      --border-color: #334155;
      --sidebar-bg: #1e293b;
      --hover-bg: #2d3748;
      --shadow-color: rgba(0, 0, 0, 0.3);
    }

    [data-theme="light"] {
      --bg-color: #f4f7fa;
      --text-color: #333333;
      --card-bg: #ffffff;
      --border-color: #e0e0e0;
      --sidebar-bg: #ffffff;
      --hover-bg: #f8fafc;
      --shadow-color: rgba(0, 0, 0, 0.1);
    }

    body {
      min-height: 100vh;
      background-color: var(--bg-color);
      color: var(--text-color);
      font-family: 'Segoe UI', system-ui, -apple-system, sans-serif;
      transition: all 0.3s ease;
    }

    .dashboard-container {
      display: flex;
      min-height: 100vh;
    }

    .sidebar {
      width: 280px;
      background: var(--sidebar-bg);
      padding: 2rem;
      border-right: 1px solid var(--border-color);
      position: fixed;
      height: 100vh;
      overflow-y: auto;
      box-shadow: 2px 0 10px var(--shadow-color);
    }

    .main-content {
      flex: 1;
      margin-left: 280px;
      padding: 2rem;
      display: flex;
      justify-content: center;
      align-items: flex-start;
    }

    .sidebar-header {
      margin-bottom: 2rem;
    }

    .sidebar-header h1 {
      font-size: 1.5rem;
      font-weight: 700;
      background: var(--primary-gradient);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      margin-bottom: 0;
    }

    .sidebar-header .subtitle {
      font-size: 0.8rem;
      color: var(--text-color);
      opacity: 0.7;
      margin-top: -5px;
    }

    .nav-link {
      color: var(--text-color);
      padding: 0.8rem 1rem;
      border-radius: 10px;
      margin-bottom: 0.5rem;
      transition: all 0.3s ease;
    }

    .nav-link:hover {
      background: var(--primary-gradient);
      color: white;
      transform: translateX(5px);
    }

    .nav-link.active {
      background: var(--primary-gradient);
      color: white;
    }

    .nav-link i {
      margin-right: 10px;
    }

    .dashboard-card {
      background: var(--card-bg);
      border-radius: 15px;
      border: 1px solid var(--border-color);
      margin-bottom: 2rem;
      box-shadow: 0 4px 15px var(--shadow-color);
      overflow: hidden;
      max-width: 1200px;
      width: 100%;
    }

    .card-header {
      padding: 1.5rem;
      border-bottom: 1px solid var(--border-color);
      background: var(--card-bg);
    }

    .card-header h3 {
      margin: 0;
      font-size: 1.25rem;
      font-weight: 600;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .card-body {
      padding: 1.5rem;
    }

    .mermaid {
      background: var(--card-bg);
      padding: 1rem;
      border-radius: 10px;
      border: 1px solid var(--border-color);
      display: flex;
      justify-content: center;
    }

    .diagram-legend {
      margin-top: 2rem;
      padding: 1rem;
      background: var(--card-bg);
      border-radius: 10px;
      border: 1px solid var(--border-color);
    }

    .legend-item {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      margin-bottom: 0.5rem;
    }

    .legend-color {
      width: 20px;
      height: 20px;
      border-radius: 4px;
    }

    .legend-text {
      font-size: 0.9rem;
      color: var(--text-color);
    }

    @media (max-width: 768px) {
      .sidebar {
        width: 100%;
        position: relative;
        height: auto;
      }

      .main-content {
        margin-left: 0;
      }

      .dashboard-container {
        flex-direction: column;
      }
    }
  </style>
</head>
<body data-theme="<%= theme %>">
  <div class="dashboard-container">
    <div class="sidebar">
      <div class="sidebar-header">
        <h1>Momentum</h1>
        <div class="subtitle">Productivity Tracker</div>
        <p class="text-muted">Welcome, <%= session.username %></p>
      </div>
      <nav>
        <a href="/admin" class="nav-link">
          <i class="bi bi-shield-lock"></i> User Management
        </a>
        <a href="/diagrams" class="nav-link active">
          <i class="bi bi-diagram-3"></i> Database Diagrams
        </a>
        <a href="/account" class="nav-link">
          <i class="bi bi-person"></i> Profile
        </a>
        <hr>
        <button class="nav-link w-100 text-start" onclick="toggleTheme()">
          <i class="bi bi-moon-stars"></i> Toggle Theme
        </button>
        <form action="/logout" method="POST">
          <button type="submit" class="nav-link w-100 text-start text-danger">
            <i class="bi bi-box-arrow-right"></i> Logout
          </button>
        </form>
      </nav>
    </div>

    <div class="main-content">
      <div class="dashboard-card">
        <div class="card-header">
          <h3><i class="bi bi-diagram-3"></i> Entity Relationship Diagram</h3>
        </div>
        <div class="card-body">
          <div class="mermaid">
            erDiagram
              users {
                int id PK
                string username
                string password
                string email
                date dob
                string role
                boolean isAdmin
                enum theme_preference
              }
              tasks {
                int id PK
                string title
                text description
                enum priority
                int estimated_time
                int actual_time
                date due_date
                enum status
                int user_id FK
                timestamp created_at
                timestamp updated_at
              }
              daily_stats {
                int id PK
                int user_id FK
                date date
                int total_tasks
                int completed_tasks
                int total_estimated_time
                int total_actual_time
                timestamp created_at
              }
              users ||--o{ tasks : "creates"
              users ||--o{ daily_stats : "has"
          </div>
          
          <div class="diagram-legend">
            <h4 class="mb-3">Legend</h4>
            <div class="legend-item">
              <div class="legend-color" style="background: var(--primary-gradient)"></div>
              <div class="legend-text">Primary Key (PK)</div>
            </div>
            <div class="legend-item">
              <div class="legend-color" style="background: var(--warning-gradient)"></div>
              <div class="legend-text">Foreign Key (FK)</div>
            </div>
            <div class="legend-item">
              <div class="legend-color" style="background: var(--success-gradient)"></div>
              <div class="legend-text">Required Field</div>
            </div>
            <div class="legend-item">
              <div class="legend-color" style="background: var(--border-color)"></div>
              <div class="legend-text">Optional Field</div>
            </div>
          </div>
        </div>
      </div>

      <div class="dashboard-card">
        <div class="card-header">
          <h3><i class="bi bi-arrow-left-right"></i> Data Flow Diagram</h3>
        </div>
        <div class="card-body">
          <div class="mermaid">
            flowchart TD
              User((User)) -->|Login| Auth[Authentication]
              Auth -->|Valid Credentials| Dashboard[Dashboard]
              Dashboard -->|Create Task| TaskForm[Task Form]
              TaskForm -->|Submit| TaskDB[(Task Database)]
              Dashboard -->|View Tasks| TaskList[Task List]
              TaskList -->|Update Status| TaskDB
              TaskDB -->|Generate Stats| Analytics[Analytics]
              Analytics -->|Display| Dashboard
              TaskDB -->|Check Deadlines| Notifications[Notifications]
              Notifications -->|Send Alerts| User
              Admin((Admin)) -->|Login| Auth
              Auth -->|Admin Access| AdminPanel[Admin Panel]
              AdminPanel -->|Manage Users| UserDB[(User Database)]
              AdminPanel -->|View Reports| Reports[Reports]
              UserDB -->|User Data| Reports
              TaskDB -->|Task Data| Reports
          </div>
          
          <div class="diagram-legend">
            <h4 class="mb-3">Legend</h4>
            <div class="legend-item">
              <div class="legend-color" style="background: var(--primary-gradient)"></div>
              <div class="legend-text">External Entity</div>
            </div>
            <div class="legend-item">
              <div class="legend-color" style="background: var(--warning-gradient)"></div>
              <div class="legend-text">Process</div>
            </div>
            <div class="legend-item">
              <div class="legend-color" style="background: var(--success-gradient)"></div>
              <div class="legend-text">Data Store</div>
            </div>
            <div class="legend-item">
              <div class="legend-color" style="background: var(--border-color)"></div>
              <div class="legend-text">Data Flow</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Initialize mermaid
    mermaid.initialize({
      startOnLoad: true,
      theme: document.body.getAttribute('data-theme') === 'dark' ? 'dark' : 'default',
      securityLevel: 'loose',
      er: {
        diagramPadding: 20,
        layoutDirection: 'TB',
        minEntityWidth: 100,
        minEntityHeight: 75,
        entityPadding: 15,
        stroke: 'gray',
        fill: 'honeydew',
        fontSize: 12
      }
    });

    function toggleTheme() {
      const body = document.body;
      const currentTheme = body.getAttribute('data-theme');
      const newTheme = currentTheme === 'light' ? 'dark' : 'light';
      body.setAttribute('data-theme', newTheme);
      
      // Update mermaid theme
      mermaid.initialize({
        theme: newTheme === 'dark' ? 'dark' : 'default'
      });
      
      fetch('/update-theme', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ theme: newTheme })
      });
    }
  </script>
</body>
</html> 